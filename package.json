    "db:generate:equipment-service": "pnpm --filter @ems/equipment-management-service run db:generate",
    "db:generate:user-service": "pnpm --filter @ems/user-management-service run db:generate"
  },
  "devDependencies": {
    "@types/node": "^20",
    "turbo": "^2.0.4"
  },
  "author": "Jules",
  "license": "ISC",
  "keywords": [
    "express",
    "monorepo",
    "nextjs",
    "pnpm",
    "react",
    "turborepo",
    "typescript"
  ],
  "module": "dist/index.esm.js",
  "packageManager": "pnpm@10.13.1+sha512.37ebf1a5c7a30d5fabe0c5df44ee8da4c965ca0c5af3dbab28c3a1681b70a256218d05c81c9c0dcf767ef6b8551eb5b960042b9ed4300c59242336377e01cfad"
