{
  "name": "ems-monorepo",
  "version": "1.0.0",
  "description": "A fullstack, modular Equipment Maintenance System",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "turbo dev --parallel",
    "build": "turbo build",
    "lint": "turbo lint",
